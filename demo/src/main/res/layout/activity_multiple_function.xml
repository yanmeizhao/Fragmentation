<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_multiple_function_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/id_fl_multiple_function_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".demo_multiple_function.MainActivity"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/id_mv_multiple_function_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/layout_nv_multiple_function_header_main"
        app:menu="@menu/menu_mutiple_function_main_drawer"/>

</android.support.v4.widget.DrawerLayout>